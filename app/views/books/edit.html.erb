<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book,url: book_path(@book.id), method: :patch do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <P>Body</P>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>

<% end %>

